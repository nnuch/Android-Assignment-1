<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="-42dp">


                    <TextView
                        android:id="@+id/tvYourName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Please, enter your name"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etInputName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/tvCheckbox"
                        android:layout_width="348dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Please, checkbox"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="-25dp" />

                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The Thinks We Are Going Steady"
                        tools:layout_editor_absoluteX="9dp"
                        tools:layout_editor_absoluteY="107dp" />

                    <TextView
                        android:id="@+id/tvEyeColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Please, select your eye color: "
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="147dp" />

                    <Spinner
                        android:id="@+id/spinnerEyeColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:spinnerMode="dropdown"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="166dp" />

                    <TextView
                        android:id="@+id/tvBirthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:text="Your Birthday :"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="195dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <EditText
                            android:id="@+id/etDisplayDate"
                            android:layout_width="230dp"
                            android:layout_height="48dp"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:textColor="@color/colorPrimary"
                            tools:layout_editor_absoluteX="8dp"
                            tools:layout_editor_absoluteY="212dp" />

                        <Button
                            android:id="@+id/btnCalender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Select Calender"
                            tools:layout_editor_absoluteX="256dp"
                            tools:layout_editor_absoluteY="212dp" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/tvShirtSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Please, select your shirt size"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="238dp" />


                    <RadioGroup
                        android:id="@+id/radioGroup_Shirt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="245dp">

                        <RadioButton
                            android:id="@+id/radioButton_XS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="XS"
                            android:checked="false" />

                        <RadioButton
                            android:id="@+id/radioButton_S"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S"
                            android:checked="false" />

                        <RadioButton
                            android:id="@+id/radioButton_M"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="M" />

                        <RadioButton
                            android:id="@+id/radioButton_L"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="L" />

                        <RadioButton
                            android:id="@+id/radioButton_XL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="XL" />

                        <RadioButton
                            android:id="@+id/radioButton_XXL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="XXL" />

                    </RadioGroup>

                    <TextView
                        android:id="@+id/tvPleaseChoose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_weight="0.18"
                        android:text="Please choose:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.18"
                        android:text="Your pant size"
                        android:textStyle="bold" />

                    <SeekBar
                        android:id="@+id/seekBar_Pant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        tools:layout_editor_absoluteX="-3dp"
                        tools:layout_editor_absoluteY="456dp" />


                    <TextView
                        android:id="@+id/tvShirt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Your shirt size"
                        android:textStyle="bold" />

                    <SeekBar
                        android:id="@+id/seekBar_Shirt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="456dp" />


                    <TextView
                        android:id="@+id/tvShoe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Your shoe size"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="-3dp"
                        tools:layout_editor_absoluteY="490dp" />

                    <SeekBar
                        android:id="@+id/seekBar_Shoe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="520dp" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center">

                        <Button
                            android:id="@+id/btnSave"
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="20dp"
                            android:onClick="doSave"
                            android:text="Save"
                            tools:layout_editor_absoluteX="148dp"
                            tools:layout_editor_absoluteY="469dp" />

                        <Button
                            android:id="@+id/btnClear"
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="20dp"
                            android:layout_toRightOf="@+id/btnSave"
                            android:onClick="doClear"
                            android:text="Clear" />

                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>


        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>